<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.mapper.BoardMapper">
    <resultMap id="board" type="board">
        <id column="bno" property="bno"/>
        <result column="title" property="title"/>
        <result column="write_date" property="writeDate"/>
        <result column="write_update_date" property="writeUpdateDate"/>
        <result column="bcount" property="bcount"/>
        <result column="blike" property="blike"/>
        <result column="bhate" property="bhate"/>
        <result column="content" property="content"/>
        <result column="id" property="id"/>
        <result column="username" property="username"/>
    </resultMap>

    <select id="selectBoardList" resultMap="board">
        select * from
        (select
        row_number() over(order by bv.bno desc) as rw, bv.*
        from board_view bv)
        where ceil(rw / #{pageContentEa}) = #{pageNo}
    </select>
    <select id="selectBoardTotalCount" resultType="int">
        select count(*)
        from board_view
    </select>
    <select id="selectCommentList" resultType="comment">
        <![CDATA[
        select * from
        (select row_number() over(order by cno desc) as rw, bcv.*
        from board_comment_view bcv where bno = #{bno})
        where rw <= #{page} * 5
        ]]>
    </select>
    <select id="selectBoardFileList" resultType="file">
        select * from
        board_file where bno = #{bno}
    </select>
</mapper>